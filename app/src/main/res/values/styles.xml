<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.SanbotVoiceAgent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>
    
    <!-- Conversation activity theme -->
    <style name="Theme.SanbotVoiceAgent.Conversation">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.SanbotVoice.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">28dp</item>
    </style>
    
    <style name="Widget.SanbotVoice.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/accent</item>
        <item name="strokeColor">@color/accent</item>
        <item name="cornerRadius">28dp</item>
    </style>
</resources>
