<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- TripAndEvent Backend -->
        <domain includeSubdomains="true">bot.tripandevent.com</domain>
        <domain includeSubdomains="true">tripandevent.com</domain>
        
        <!-- Test Backend (Render) -->
        <domain includeSubdomains="true">onrender.com</domain>
        <domain includeSubdomains="true">openai-realtime-backend-v1.onrender.com</domain>
        
        <!-- OpenAI API -->
        <domain includeSubdomains="true">api.openai.com</domain>
        
        <!-- Trust system CAs -->
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Debug configuration - allows local testing -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
